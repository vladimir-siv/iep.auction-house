@{ViewBag.Title = "Create auction";}

<div class="jumbotron no-padding-bottom font-rammetto-one text-center" style="background-color: inherit;">
	<h1><span class="text-primary">C</span>reate an auction</h1>
</div>
<section id="section-main" class="border-boxed expanded no-margin no-padding">
	<article id="auction-info" class="border-boxed expanded">
		<div class="input-group">
			<span class="input-group-addon"><i class="glyphicon glyphicon-header"></i></span>
			<input id="auction-title" type="text" class="form-control" name="auction-title" placeholder="Title (eg. Samsung S7 Edge)">
		</div>
		<div class="input-group">
			<span class="input-group-addon"><i class="glyphicon glyphicon-time"></i></span>
			<input id="auction-time" type="text" class="form-control" name="auction-time" placeholder="Auction time (eg. 3600) [seconds]">
		</div>
		<div class="input-group">
			<span class="input-group-addon"><i class="glyphicon glyphicon-certificate"></i></span>
			<input id="auction-price" type="text" class="form-control" name="auction-price" placeholder="Starting price (eg. 30.75) [tokens]">
		</div>
	</article>
	<article id="auction-images" class="border-boxed expanded margin-bottom-sm">
		<div class="border-boxed expanded padding-xs">
			<button id="attach" type="button" class="btn btn-info" onclick="$('article#auction-images input#attach-files').click();"><i class="fa fa-file-zip-o"></i> Attach file(s)...</button>
			<input id="attach-files" name="post-attachment" data-collectable="#" data-collect="files" type="file" style="display: none;" accept=".png" multiple>
			<p id="attached-files-display" class="font-times-new-roman font-xs"></p>
			<script type="text/javascript">
				$("article#auction-images input#attach-files").change(function (event) {
					var names = $.map($(this).prop("files"), function (val) { return val.name; });

					var filenames = "";
					for (var i = 0; i < names.length; i++)
						filenames += names[i] + " | ";
					$("article#auction-images p#attached-files-display").html(filenames.substring(0, filenames.length - 3));
				});
			</script>
		</div>
	</article>
	<article id="auction-create" class="border-boxed expanded margin-bottom-md">
		<button type="button" class="btn btn-primary btn-md" onclick="createAuction($('article#auction-info input#auction-title')[0].value, $('article#auction-info input#auction-time')[0].value, $('article#auction-info input#auction-price')[0].value, $('article#auction-images input#attach-files'));">Create!</button>
	</article>
</section>