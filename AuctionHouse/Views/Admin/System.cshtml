@model AuctionHouse.Models.SystemParameters
@{ViewBag.Title = "System Parameters";}

<section id="system-parameters" class="border-boxed expanded margin-top-lg margin-bottom-lg">
	<article id="parameters-info" class="border-boxed expanded">
		<div class="input-group">
			<span class="input-group-addon"><i class="glyphicon glyphicon-certificate"></i></span>
			<input id="recent-auctions" type="text" class="form-control" name="recent-auctions" placeholder="Recent auctions (eg. 10)" value="@Model.RecentAuctions">
		</div>
		<div class="input-group">
			<span class="input-group-addon"><i class="glyphicon glyphicon-certificate"></i></span>
			<input id="default-auction-time" type="text" class="form-control" name="default-auction-time" placeholder="Auction time (eg. 3600) [seconds]" value="@Model.DefaultAuctionTime">
		</div>
		<div class="input-group">
			<span class="input-group-addon"><i class="glyphicon glyphicon-certificate"></i></span>
			<input id="silver-package" type="text" class="form-control" name="silver-package" placeholder="Amount of tokens in Silver package (eg. 30.00) [tokens]" value="@Model.SilverPackage">
		</div>
		<div class="input-group">
			<span class="input-group-addon"><i class="glyphicon glyphicon-certificate"></i></span>
			<input id="gold-package" type="text" class="form-control" name="gold-package" placeholder="Amount of tokens in Gold package (eg. 50.00) [tokens]" value="@Model.GoldPackage">
		</div>
		<div class="input-group">
			<span class="input-group-addon"><i class="glyphicon glyphicon-certificate"></i></span>
			<input id="platinum-package" type="text" class="form-control" name="platinum-package" placeholder="Amount of tokens in Platinum package (eg. 100.00) [tokens]" value="@Model.PlatinumPackage">
		</div>
		<div class="input-group">
			<span class="input-group-addon"><i class="glyphicon glyphicon-certificate"></i></span>
			<input id="currency" type="text" class="form-control" name="currency" placeholder="System currency (eg. EUR)" value="@Model.Currency">
		</div>
		<div class="input-group">
			<span class="input-group-addon"><i class="glyphicon glyphicon-certificate"></i></span>
			<input id="price-rate" type="text" class="form-control" name="price-rate" placeholder="Price rate (eg. 0.15) [1 token = 0.15 System Currency]" value="@Model.PriceRate">
		</div>
	</article>
	<article id="submit" class="border-boxed expanded">
		<input id="submit" type="button" class="form-control" name="submit" value="Change" onclick="changeSystem($('#recent-auctions')[0].value, $('#default-auction-time')[0].value, $('#silver-package')[0].value, $('#gold-package')[0].value, $('#platinum-package')[0].value, $('#currency')[0].value, $('#price-rate')[0].value);" />
	</article>
</section>